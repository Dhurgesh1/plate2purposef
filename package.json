{
  "name": "plate2purpose",
  "version": "1.0.0",
  "description": "A school food wastage reduction app aligned with SDG 12",
  "main": "main.js",
  "author": "Â© Plate2Purpose",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dist": "electron-builder --win nsis"
  },
  "build": {
    "appId": "com.plate2purpose.app",
    "productName": "Plate2Purpose",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "asar": true,
    "npmRebuild": false,
    "win": {
      "icon": "icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "artifactName": "${productName} Setup ${version}.${ext}"
    }
  },
  "devDependencies": {
    "electron": "^27.3.11",
    "electron-builder": "^24.13.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Pixel-forge-studios-devolopers/Plate2purpose.git"
  },
  "keywords": [],
  "bugs": {
    "url": "https://github.com/Pixel-forge-studios-devolopers/Plate2purpose/issues"
  },
  "homepage": "https://github.com/Pixel-forge-studios-devolopers/Plate2purpose#readme"
}
